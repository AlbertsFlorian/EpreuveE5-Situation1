{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Liste des inscriptions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Statut</th>
                <th>Formation</th>
                <th>Employe</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inscription in inscriptions %}
            <tr>
                <td>{{ inscription.id }}</td>
                <td>{{ inscription.statut }}</td>
                <td>{{ inscription.formation.id }}</td>
                <td>{{ inscription.employe.login }}</td>
                <td>
                    <a href="{{ path('inscription_accept', {'id': inscription.id}) }}">Accepter</a>
                    <a href="{{ path('inscription_refuse', {'id': inscription.id}) }}">Refuser</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <h3>Ajouter une nouvelle formation</h3>

    <a href="{{ path('formation_new') }}">Nouvelle formation</a>
    <br>
    <a href="{{ path('formation_index') }}">Liste des formations</a>

{% endblock %}
