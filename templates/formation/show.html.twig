{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
<h1 align="center">Formations</h1><br>
    <div class="container raw col-4" align="center">
        <table class="table shadow-lg p-3 mb-5 bg-body rounded">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ formation.id }}</td>
                </tr>
                <tr>
                    <th>Date de début</th>
                    <td>{{ formation.dateDebut ? formation.dateDebut|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Nombre d'heures</th>
                    <td>{{ formation.nbresHeures }}</td>
                </tr>
                <tr>
                    <th>Département</th>
                    <td>{{ formation.departement }}</td>
                </tr>
                <tr>
                    <th>Produit</th>
                    <td>{{ formation.produit.libelle }}</td>
                </tr>
            </tbody>
        </table>
    
        <a href="{{ path('formation_index') }}">Retour à la liste</a>

        <a href="{{ path('formation_edit', {'id': formation.id}) }}">Modifier</a>

        {{ include('formation/_delete_form.html.twig') }}
    </div>
{% endblock %}
